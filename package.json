{
  "name": "shango-deploy",
  "version": "0.0.1",
  "description": "Deploy your web app anywhere",
  "main": "index.js",
  "author": "devalade",
  "license": "ISC",
  "type": "module",
  "keywords": [
    "deploy"
  ],
  "bin": {
    "shango": "./dist/index.js"
  },
  "imports": {
    "~": "./src/*.js"
  },
  "scripts": {
    "link-cli": "npm link || true && npm link",
    "dev": "tsc -w",
    "test": "vitest",
    "copy-templates": "copyfiles -u 1 src/templates/**/* dist",
    "build": "tsc && chmod +x dist/index.js && npm run copy-templates",
    "install:local": "npm run build && npm run link-cli"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/ssh2": "^1.15.1",
    "@types/yaml": "^1.9.7",
    "copyfiles": "^2.4.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "inquirer": "^12.2.0",
    "ssh2": "^1.15.0",
    "yaml": "^2.6.1"
  }
}
