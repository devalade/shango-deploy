{
  "name": "shango-deploy-root",
  "version": "0.0.0",
  "description": "Shango deploy monorepo",
  "author": "devalade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devalade/shango-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/devalade/shango-deploy/issues"
  },
  "keywords": [
    "deploy",
    "deployment",
    "continous-deployment",
    "automation"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "link-cli": "turbo run shango-cli#link || true && turbo run shango-cli#link",
    "dev": "turbo run shango-cli#dev",
    "test": "turbo run shango-cli#test"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "!**/test/**",
    "examples/*"
  ],
  "devDependencies": {
    "turbo": "^2.3.4",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.3"
}
